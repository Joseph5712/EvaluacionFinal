@model IEnumerable<EvaluacionFinal.Models.UsuarioModel>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Usuario</th>
            <th>Nombre Completo</th>
            <th>Edad</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.ID</td>
                <td>@usuario.NombreUsuario</td>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.Edad</td>
                <td>@usuario.Correo</td>
                <td>@usuario.RolID</td>
                <td>
                    <a href="@Url.Action("Details", new { id = usuario.ID })">Detalles</a> |
                    <a href="@Url.Action("Edit", new { id = usuario.ID })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = usuario.ID })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Usuario</a>
