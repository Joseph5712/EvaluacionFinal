@model IEnumerable<EvaluacionFinal.Models.RolModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.ID</td>
                <td>@rol.Nombre</td>
                <td>@rol.Descripción</td>
                <td>@rol.Estado</td>
                <td>
                    <a href="@Url.Action("Details", new { id = rol.ID })">Detalles</a> |
                    <a href="@Url.Action("Edit", new { id = rol.ID })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = rol.ID })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Rol</a>
